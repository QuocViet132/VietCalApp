<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalculatorFragment"
    android:background="@color/black">

    <TextView
        android:id="@+id/tv_result_calculate"
        android:layout_above="@id/fragment_numpad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/init_result_calculate"
        android:textSize="70sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginBottom="40dp"
        android:gravity="end"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"/>

    <LinearLayout
        android:id="@+id/fragment_numpad"
        android:layout_alignBottom="@id/fragment_numpad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_ac"
                android:text="AC"
                style="@style/btn_numpad_2"/>

            <Button
                android:id="@+id/btn_7"
                android:text="7"
                style="@style/btn_numpad_1"/>

            <Button
                android:id="@+id/btn_4"
                android:text="4"
                style="@style/btn_numpad_1"/>

            <Button
                android:id="@+id/btn_1"
                android:text="1"
                style="@style/btn_numpad_1"/>

            <Button
                android:id="@+id/btn_negate"
                android:text="+/-"
                style="@style/btn_numpad_2"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_remove"
                android:contentDescription="btn_remove"
                android:drawableStart="@drawable/ic_remove_35"
                android:paddingStart="18dp"
                android:paddingEnd="18dp"
                style="@style/btn_numpad_2"/>

            <Button
                android:id="@+id/btn_8"
                android:text="8"
                style="@style/btn_numpad_1"/>

            <Button
                android:id="@+id/btn_5"
                android:text="5"
                style="@style/btn_numpad_1"/>

            <Button
                android:id="@+id/btn_2"
                android:text="2"
                style="@style/btn_numpad_1"/>

            <Button
                android:id="@+id/btn_0"
                android:text="0"
                style="@style/btn_numpad_1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_percent"
                android:text="%"
                style="@style/btn_numpad_2"/>

            <Button
                android:id="@+id/btn_9"
                android:text="9"
                style="@style/btn_numpad_1"/>

            <Button
                android:id="@+id/btn_6"
                android:text="6"
                style="@style/btn_numpad_1"/>

            <Button
                android:id="@+id/btn_3"
                android:text="3"
                style="@style/btn_numpad_1"/>

            <Button
                android:id="@+id/btn_dot"
                android:text="."
                style="@style/btn_numpad_1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_divide"
                android:text="/"
                style="@style/btn_numpad_2"/>

            <Button
                android:id="@+id/btn_multiply"
                android:text="X"
                style="@style/btn_numpad_2"/>

            <Button
                android:id="@+id/btn_subtraction"
                android:contentDescription="btn_subtraction"
                android:text="-"
                style="@style/btn_numpad_2"/>

            <Button
                android:id="@+id/btn_plus"
                android:text="+"
                style="@style/btn_numpad_2"/>

            <Button
                android:id="@+id/btn_equal"
                android:text="="
                android:backgroundTint="@color/material_deep_orange_500"
                android:textColor="@color/white"
                style="@style/btn_numpad_2"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>